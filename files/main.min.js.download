function selectFirst() {
    document.querySelector('input[type="radio"]:first-child').click();
}

document.addEventListener('DOMContentLoaded', function() {
    // Random number animation
    jQuery({someValue:0}).animate({someValue:Math.floor(Math.random()*3000)}, {
        duration: 3000,
        easing: 'swing',
        step: function() {
            jQuery('.count').text(commaSeparateNumber(Math.round(this.someValue)));
        }
    });

    // Format number with comma
    function commaSeparateNumber(val) {
        while (/(\d+)(\d{3})/.test(val.toString())) {
            val = val.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,");
        }
        return val;
    }

    // Handle radio button change
    jQuery('body').on('change', 'input.check-input:radio', function() {
        if (jQuery(this).is(":checked")) {
            jQuery(this).parents("div.vop-test2").addClass("checked");
            jQuery(this).parents("div.vop-test").addClass("checked");
        } else {
            jQuery(this).parents("div.vop-test2").removeClass("checked");
            jQuery(this).parents("div.vop-test").removeClass("checked");
        }
    });

    // Scroll to top
    jQuery('#toTop').click(function() {
        jQuery('html, body').animate({ scrollTop: 0 }, 800);
        return false;
    });

    // Cookie modal
    if (navigator.userAgent.indexOf('Lighthouse') < 0) {
        jQuery(function() {
            if (!jQuery.cookie('hideModal')) {
                var delay_popup = 1000;
                setTimeout(function() {
                    document.querySelector('.bottom__cookie-block').style.display = 'inline-block';
                }, delay_popup);
            }
            jQuery('.ok').click(function() {
                jQuery.cookie('hideModal', true, { expires: 30, path: '/' });
                jQuery('.bottom__cookie-block').fadeOut();
            });
        });
    }
});
